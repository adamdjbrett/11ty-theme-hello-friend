<article class="post">
  <h1>Search</h1>
  <p>Search all published pages and posts.</p>
  <div id="search"></div>
</article>

<link rel="stylesheet" href="/pagefind/pagefind-ui.css" />
<script src="/pagefind/pagefind-ui.js" defer></script>
<script defer>
  window.addEventListener("DOMContentLoaded", () => {
    // Pagefind UI mounts into #search after the search index is generated in build.
    new PagefindUI({
      element: "#search",
      showSubResults: true,
      highlightParam: "highlight"
    });
  });
</script>
