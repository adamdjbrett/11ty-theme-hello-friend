<!doctype html>
<html lang="{{ metadata.language or 'en' }}">
  <head>
    <title>{% if page.url == '/' %}{{ metadata.title }}{% if metadata.subtitle %} - {{ metadata.subtitle }}{% endif %}{% else %}{{ title }} - {{ metadata.title }}{% endif %}</title>
    {% include "partials/head.njk" %}
    {% block head %}{% endblock %}
  </head>
  <body class="{{ metadata.defaultTheme }}-theme">
    <a href="#main-content" class="skip-link">Skip to content</a>
    <div class="h-card" hidden>
      <a class="u-url p-name" href="{{ metadata.url }}">{{ metadata.title }}</a>
    </div>

    <div class="container">
      {% include "partials/header.njk" %}
      <main class="content" id="main-content" data-pagefind-body>
        {% block content %}{{ content | safe }}{% endblock %}
      </main>
      {% include "partials/footer.njk" %}
    </div>
  </body>
</html>
