{% if pagination.href.previous or pagination.href.next %}
<nav class="pagination" aria-label="Pagination">
  <div class="pagination__title">
    <span class="pagination__title-h">{{ metadata.readOtherPosts or "Read other posts" }}</span>
    <hr />
  </div>
  <div class="pagination__buttons">
    {% if pagination.href.previous %}
      <span class="button previous"><a href="{{ pagination.href.previous }}"><span class="button__icon">&larr;</span><span class="button__text">{{ metadata.newerPosts or "Newer posts" }}</span></a></span>
    {% endif %}
    {% if pagination.href.next %}
      <span class="button next"><a href="{{ pagination.href.next }}"><span class="button__text">{{ metadata.olderPosts or "Older posts" }}</span><span class="button__icon">&rarr;</span></a></span>
    {% endif %}
  </div>
</nav>
{% endif %}
