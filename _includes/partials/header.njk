<header class="header">
  <span class="header__inner">
    {% include "partials/logo.njk" %}
    <span class="header__right">
      {% if (metadata.navigation or []).length %}
        {% include "partials/menu.njk" %}
        <span class="menu-trigger hidden" role="button" tabindex="0" aria-label="Toggle navigation menu">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z" />
          </svg>
        </span>
      {% endif %}
      <span class="theme-toggle" role="button" tabindex="0" aria-label="Toggle color theme">
        {% include "partials/theme-icon.njk" %}
      </span>
    </span>
  </span>
</header>
